<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? "put" : "post") %>
<% message = (user.persisted? ? "Update account" : "Create account") %>

<form action="<%= action %>" method="post">

  <%= auth_token_input %>

  <input
     name="_method"
     type="hidden"
     value="<%= method %>">

  <label for="user_email">Email</label>
  <input
     id="user_email"
     name="user[email]"
     type="text">
  <br>

  <label for="user_password">Password</label>
  <input
     id="user_password"
     name="user[password]"
     type="password">
  <br>

  <input type="submit" value="<%= message %>">
</form>
